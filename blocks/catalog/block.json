{
    "slug": "catalog",
    "title": "Catálogo",
    "desc": "Catálogo para ser usado na página de Transformações",
    "icon": " bi bi-grid-3x2-gap-fill text-primary",
    "categ": "emertechblock",
    "usesInner": true,
    "attrs": {
        "anchor": {
            "type": "string"
        },
        "postType": {
            "type": "string"
        },
        "viewAllLabel": {
            "type": "string"
        },
        "noOfPosts": {
            "type": "integer"
        }
    },
    "edit": [
        {
            "tag": "input",
            "type": "text",
            "attr": "anchor",
            "label": "Âncora HTML",
            "help": "Caso queira criar um link dentro da página"
        },
        {
            "tag": "title",
            "title": "Configuração"
        },
        {
            "tag": "input",
            "type": "select",
            "attr": "postType",
            "label": "Tipo a usar",
            "options": [
                {
                    "value": "post",
                    "label": "Artigos"
                },
                {
                    "value": "page",
                    "label": "Páginas"
                },
                {
                    "value": "transform",
                    "label": "Transformações"
                }
            ]
        },
        {
            "tag": "input",
            "type": "text",
            "attr": "viewAllLabel",
            "label": "Texto de \"Ver Todos\"",
            "help": "Ex.: \"Ver catálogo completo\" ou \"Abrir catálogo\""
        },
        {
            "tag": "input",
            "type": "range",
            "attr": "noOfPosts",
            "label": "Número de posts/transformações a mostrar",
            "min": 3,
            "max": 8
        }
    ]

}