{
    "slug": "catalog",
    "title": "Catálogo",
    "desc": "Catálogo para ser usado na página de Transformações",
    "icon": " bi bi-grid-3x2-gap-fill text-primary",
    "categ": "emertechblock",
    "usesInner": true,
    "attrs": {
        "anchor": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "subtitle": {
            "type": "string"
        },
        "enableReadMore": {
            "type": "boolean"
        },
        "postType": {
            "type": "string"
        },
        "primaryBtnLabel": {
            "type": "string"
        },
        "primaryBtnIcon": {
            "type": "string"
        },
        "secondaryBtnLabel": {
            "type": "string"
        },
        "secondaryBtnIcon": {
            "type": "string"
        },
        "secondaryBtnLink": {
            "type": "string"
        },
        "secondaryBtnDownload": {
            "type": "string"
        },
        "noOfPosts": {
            "type": "integer"
        },
        "order": {
            "type": "string"
        }
    },
    "edit": [
        {
            "tag": "input",
            "type": "text",
            "attr": "anchor",
            "label": "Âncora HTML",
            "help": "Caso queira criar um link dentro da página"
        },
        {
            "tag": "title",
            "title": "Conteúdo"
        },
        {
            "tag": "input",
            "type": "text",
            "attr": "title",
            "label": "Título",
            "help": "Deixe em branco para ocultar."
        },
        {
            "tag": "input",
            "type": "text",
            "attr": "subtitle",
            "label": "Subtítulo",
            "help": "Deixe em branco para ocultar."
        },
        {
            "tag": "input",
            "type": "check",
            "attr": "enableReadMore",
            "label": "Mostrar botão \"Leia Mais\""
        },
        {
            "tag": "title",
            "title": "Configuração"
        },
        {
            "tag": "input",
            "type": "select",
            "attr": "postType",
            "label": "Tipo a usar",
            "options": [
                {
                    "value": "post",
                    "label": "Artigos"
                },
                {
                    "value": "page",
                    "label": "Páginas"
                },
                {
                    "value": "transform",
                    "label": "Transformações"
                }
            ]
        },
        {
            "tag": "title",
            "title": "Botão \"Ver catálogo\""
        },
        {
            "tag": "input",
            "type": "text",
            "attr": "primaryBtnLabel",
            "label": "Texto",
            "help": "Ex.: \"Ver catálogo completo\" ou \"Abrir catálogo\". Deixar em branco para ocultar"
        },
        {
            "tag": "input",
            "type": "bsIcon",
            "attr": "primaryBtnIcon",
            "label": "Ícone",
            "help": "Deixar em branco para ocultar"
        },
        {
            "tag": "title",
            "title": "Botão secundário"
        },
        {
            "tag": "input",
            "type": "text",
            "attr": "secondaryBtnLabel",
            "label": "Texto",
            "help": "Ex.: \"Fazer download de Catálogo\" ou \"Descarregar catálogo\""
        },
        {
            "tag": "input",
            "type": "bsIcon",
            "attr": "secondaryBtnIcon",
            "label": "Ícone",
            "help": "Deixar em branco para ocultar"
        },
        {
            "tag": "input",
            "type": "url",
            "attr": "secondaryBtnLink",
            "label": "Link",
            "help": "Link do botão"
        },
        {
            "tag": "input",
            "type": "check",
            "attr": "secondaryBtnDownload",
            "label": "Fazer download de arquivo?",
            "help": "Ativar caso queira fazer download do arquivo que consta no link acima"
        },
        {
            "tag": "input",
            "type": "range",
            "attr": "noOfPosts",
            "label": "Número de posts/transformações a mostrar",
            "min": 3,
            "max": 8
        },
        {
            "tag": "input",
            "type": "select",
            "attr": "order",
            "label": "Ordenação:",
            "help": "A ordem definida (-1, -2, 0) será respeitada antes da alfabética e cronológica.",
            "options": [
                {
                    "label": "Alfabética (por título)",
                    "value": "title"
                },
                {
                    "label": "Cronológica (por data de publicação)",
                    "value": "date"
                }
            ]
        }
    ]

}